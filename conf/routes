# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Client.index()
GET		/register					controllers.Client.register()
POST	/register					controllers.Client.doRegister()
GET		/login						controllers.Client.login()
POST	/login						controllers.Client.doLogin()
GET		/logout						controllers.Client.logout()
GET		/chat						controllers.Client.chat()
GET		/sendMessage				controllers.Client.sendMessage()
GET		/messages/:lastXHours		controllers.Client.getMessages(lastXHours: Int)

# Server communication
GET		/server/register			controllers.Server.register()
GET		/server/unregister			controllers.Server.unregister()
GET		/server/push/server			controllers.Server.pushServer()
GET		/server/push/user			controllers.Server.pushUser()
GET		/server/push/message		controllers.Server.pushMessage()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)